# Production environment template.
# Copy to .env and set values before: docker-compose up -d

# Django
DJANGO_SETTINGS_MODULE=config.settings.prod
SECRET_KEY=<generate-a-long-random-key>
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# MongoDB (docker-compose service name)
MONGODB_NAME=kavnt
MONGODB_HOST=mongodb://mongodb:27017

# Redis (docker-compose service name)
REDIS_URL=redis://redis:6379/0

# Frontend (public origin for API calls from the browser)
NEXT_PUBLIC_API_URL=https://yourdomain.com
